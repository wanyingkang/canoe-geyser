<comment>
problem   = Moist rising bubble test
reference = Bryan and Fritsch, 2002
configure = --prob=geyser --flux=lmars --nvapor=2 --nphase=2 --nghost=3 -pnetcdf -mpi

<job>
problem_id  = geyser        # problem ID: basename of output filenames
tasklist    = ImplicitHydroTasks

<output1>
file_type   = hst           # History data dump
dt          = 1          # time increment between outputs

<output2>
file_type   = pnetcdf       # Netcdf format output
variable    = prim          # variables to be output
dt          = 1           # time increment between outputs

<output3>
file_type   = pnetcdf       # Netcdf format output
variable    = uov           # diagnostic variables
dt          = 1           # time increment

<time>
cfl_number  = 0.01          # The Courant, Friedrichs, & Lewy (CFL) Number
nlim        = -1            # cycle limit
tlim        = 100.          # time limit
xorder      = 5             # horizontal reconstruction order
integrator  = rk3           # integration method

<mesh>
nx1         = 32.          # Number of zones in X1-direction
x1min       = 0.            # minimum value of X1
x1max       = 1.E3          # maximum value of X1
ix1_bc      = reflecting    # inner-X1 boundary flag
ox1_bc      = outflow       # outer-X1 boundary flag

nx2         = 1             # Number of zones in X2-direction
x2min       = 0.            # minimum value of X2
x2max       = 50.0          # maximum value of X2
ix2_bc      = reflecting    # inner-X2 boundary flag
ox2_bc      = reflecting    # outer-X2 boundary flag

nx3         = 1             # Number of zones in X3-direction
x3min       = -0.5          # minimum value of X3
x3max       = 0.5           # maximum value of X3
ix3_bc      = periodic      # inner-X3 boundary flag
ox3_bc      = periodic      # outer-X3 boundary flag

<meshblock>
nx1         = 32
nx2         = 1
nx3         = 1

<hydro>
grav_acc1   = 0.
gamma      = 1.667        # gamma = C_pd/C_vd

<species>
vapor = H2O, CO2
cloud = H2O(c), CO2(c)

<thermodynamics>
Rd          = 4155.       # Dry air gas constant in mass
eps1        = 9.   9.     # Calculate epsilon
rcp1        = 0.1778   0.1778
beta1       = 0.   22.46
Ttriple1    = 273.16
Ptriple1    = 611.7

eps2        = 22.   22.
rcp2        = 0.07273   0.07273
beta2       = 0. 14.99
Ttriple2    = 216.59
Ptriple2    = 5.1795e5

massflux_H2ratio=0.01 # injected mass ratio of H2
massflux_CO2ratio=0.01 # injected mass ratio of CO2

sa.max_iter = 10
sa.relax    = 1.0
sa.ftol     = 1.e-1

<problem>
dT    = 2.0
xc    = 10.E3
zc    = 2.E3
xr    = 2.E3
zr    = 2.E3
p0    = 1.E5
qt    = 0.0196
tau   = 1e8

Tm    = 271.0 # melting temperature of ice, water-ice interface temp
Ts    = 60.0 # ice surface temperature

